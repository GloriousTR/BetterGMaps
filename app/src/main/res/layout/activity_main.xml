<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Full Screen Map -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Container: Search + Chips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:elevation="6dp">

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#757575" />

                <TextView
                    android:id="@+id/search_bar_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Burada arayın"
                    android:textSize="16sp"
                    android:textColor="#757575" />

                <ImageView
                    android:id="@+id/btn_settings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_app_logo"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Category Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_chip_home"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Ev"
                    android:background="@drawable/bg_speed_container"
                    android:drawableStart="@android:drawable/ic_menu_my_calendar" 
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_chip_work"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="İş"
                    android:background="@drawable/bg_speed_container"
                    android:drawableStart="@android:drawable/ic_menu_agenda"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"/>
                
                <Button
                    android:id="@+id/btn_chip_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Benzin"
                    android:background="@drawable/bg_speed_container"
                    android:paddingHorizontal="12dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Layers Button (Positioned: Top Right, between Search and Speedometer) -->
    <ImageView
        android:id="@+id/btn_layers"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_dialog_map"
        android:background="@drawable/bg_speed_container"
        android:padding="8dp"
        android:elevation="6dp" 
        android:clickable="true"
        android:focusable="true"/>

    <!-- Speedometer (Positioned: Just below Layers) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_speed_container"
        android:padding="4dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="top|end"
        android:gravity="center_vertical"
        android:elevation="6dp">

        <TextView
            android:id="@+id/text_speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginHorizontal="12dp" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_limit_circle">
            <TextView
                android:id="@+id/text_limit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>
    
    <!-- Hazard Alert -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_hazard_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFCC00"
        app:cardElevation="10dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_app_logo" />
            <TextView
                android:id="@+id/text_hazard_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Dikkat! Kasis"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Bar (Mock using LinearLayout for simplicity without menu resources) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Explore -->
        <LinearLayout
            android:id="@+id/nav_explore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#2196F3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keşfet"
                android:textSize="12sp"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- Saved -->
        <LinearLayout
            android:id="@+id/nav_saved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_save"
                app:tint="#757575"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaydedilenler"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Contribute -->
        <LinearLayout
            android:id="@+id/nav_contribute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_add"
                app:tint="#757575"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katkı"
                android:textSize="12sp"
                android:textColor="#757575"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Report FAB (Hidden or replaced by Contribute?) Keeping hidden for now as 'Contribute' takes its place logic-wise -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="80dp" 
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#2196F3"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
